<UserControl
    Height="27"
    Width="27"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Shavkat_grabber.Views.Controls.Indicator"
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="clr-namespace:Shavkat_grabber.Views.Controls"
    xmlns:conv="clr-namespace:Shavkat_grabber.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <conv:BoolToBrushConverter x:Key="boolToBrushConverter" />
    </UserControl.Resources>

    <UserControl.Styles>
        <Style Selector="Ellipse">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Duration="0:0:0.5" Property="Fill" />
                </Transitions>
            </Setter>
        </Style>
    </UserControl.Styles>

    <Border
        BorderBrush="DarkGray"
        BorderThickness="1"
        CornerRadius="15"
        Padding="1">
        <Ellipse
            Fill="{Binding IsChecked, RelativeSource={RelativeSource AncestorType={x:Type controls:Indicator}}, Converter={StaticResource boolToBrushConverter}}"
            Height="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="20" />
    </Border>
</UserControl>
