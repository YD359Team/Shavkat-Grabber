<Window
    Height="180"
    Title="QuestionWindow"
    Width="250"
    WindowStartupLocation="CenterOwner"
    d:DesignHeight="180"
    d:DesignWidth="250"
    mc:Ignorable="d"
    x:Class="Shavkat_grabber.Views.Dialogs.QuestionWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Window.Styles>
        <Style Selector="Button">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="BorderThickness" Value="1.5" />
        </Style>
    </Window.Styles>

    <Border
        BorderBrush="Black"
        BorderThickness="1"
        Padding="4,2">
        <DockPanel>
            <TextBlock
                DockPanel.Dock="Top"
                FontSize="18"
                HorizontalAlignment="Center"
                Name="tblTitle"
                TextWrapping="Wrap" />
            <StackPanel
                HorizontalAlignment="Stretch"
                Orientation="Horizontal"
                Spacing="5"
                VerticalAlignment="Center">
                <Button
                    BorderBrush="LimeGreen"
                    Content="Да"
                    Name="btnYes" />
                <Button
                    BorderBrush="LimeGreen"
                    Content="Ок"
                    Name="btnOk" />
                <Button
                    BorderBrush="Red"
                    Content="Нет"
                    Name="btnNo" />
                <Button
                    BorderBrush="Black"
                    Content="Отмена"
                    Name="btnCancel" />
            </StackPanel>
        </DockPanel>
    </Border>

</Window>